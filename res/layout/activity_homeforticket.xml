<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <RelativeLayout
        android:id="@+id/tabbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/radio_firstpage_layout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff" >

                <RadioButton
                    android:id="@+id/radio_firstpage_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/firstpage_radio_layout"
                    android:gravity="center"
                    android:text="@string/firstpage_tab"
                    android:textColor="#1db2f6"
                    android:textSize="@dimen/bottom_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radio_message_layout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff" >

                <RadioButton
                    android:id="@+id/radio_message_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:drawableTop="@drawable/message_radio_layout"
                    android:gravity="center"
                    android:text="@string/message_tab"
                    android:textColor="@color/color_tab_radio"
                    android:textSize="@dimen/bottom_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radio_buyticket_layout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff" >

                <RadioButton
                    android:id="@+id/radio_buyticket_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:drawableTop="@drawable/buyticket_radio_layout"
                    android:gravity="center"
                    android:text="@string/buyticket_tab"
                    android:textColor="@color/color_tab_radio"
                    android:textSize="@dimen/bottom_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/radio_me_layout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff" >

                <RadioButton
                    android:id="@+id/radio_me_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:drawableTop="@drawable/me_radio_layout"
                    android:gravity="center"
                    android:text="@string/me_tab"
                    android:textColor="@color/color_tab_radio"
                    android:textSize="@dimen/bottom_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/tabbar"
        android:background="@drawable/tab_bottom_line" />

    <com.homeforticket.framework.CenterView
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_line" />

</RelativeLayout>