<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8ff" >

    <RelativeLayout
        android:id="@+id/order_info_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/order_info"
            android:textColor="#979797"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/me_long_line" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_id_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/order_info_layout"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/order_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/order_id"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_id_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_time_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/order_id_layout"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/order_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/order_time"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_time_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_count_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/order_time_layout"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/order_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/order_pay_count"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_count_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_total_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/order_count_layout"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/order_total_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/order_pay_total"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_total_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/order_total_pay_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/me_long_line" />
    </RelativeLayout>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_total_pay_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/fetch_button_layout"
        android:gravity="center"
        android:text="@string/immediately_pay"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>