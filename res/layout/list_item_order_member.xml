<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/member_name_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/member_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/user_name"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/member_name_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/member_mobile_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/member_name_layout" >

        <TextView
            android:id="@+id/member_mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/connect_people_tel"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/member_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/member_mobile_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/me_short_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/member_card_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/member_mobile_layout" >

        <TextView
            android:id="@+id/member_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/connect_people_card"
            android:textColor="#414358"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/member_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/member_card_title"
            android:textColor="#414358"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/me_long_line" />
    </RelativeLayout>

</RelativeLayout>