<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="#1db2f6"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:textColor="#ff9024"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/me_long_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/me_long_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_below="@id/name_layout" >

        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/order_default_img" />

        <TextView
            android:id="@+id/leave_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_title"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/item_pic"
            android:textColor="#c3c3c3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:textColor="#979797"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/single_price"
            android:layout_marginRight="12dp"
            android:layout_marginTop="30dp"
            android:textColor="#979797"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/single_price"
            android:layout_toRightOf="@id/item_pic"
            android:textColor="#414358"
            android:textSize="16dp" />

        <View
            android:id="@+id/short_line"
            android:layout_width="293dp"
            android:layout_height="0.5dp"
            android:layout_below="@id/item_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/me_short_line" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/short_line"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:textColor="#414358"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_line"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/total_price"
            android:text="@string/pay_text"
            android:textColor="#414358"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/count_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_line"
            android:layout_marginRight="32dp"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/pay_text"
            android:text="@string/commodity_text"
            android:textColor="#979797"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/count_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_line"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/count_end"
            android:textColor="#979797"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_line"
            android:layout_marginTop="13dp"
            android:layout_toLeftOf="@id/count_middle"
            android:text="@string/total_text"
            android:textColor="#979797"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/me_long_line" />
    </RelativeLayout>

</RelativeLayout>