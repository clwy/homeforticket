<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8ff" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/head_title_layout" />

    <RelativeLayout
        android:id="@+id/edittext_password_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="33dp"
        android:background="#ffffff" >

        <RelativeLayout
            android:id="@+id/input_original_password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/input_original_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/input_original_password"
                android:textColor="#000000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_original_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/input_original_password_title"
                android:maxLength="12"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/input_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/input_original_password_layout"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/input_new_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/input_new_password"
                android:textColor="#000000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/input_new_password_title"
                android:maxLength="12"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/me_long_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/me_long_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/me_long_line" />
    </RelativeLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/blue_button_layout"
        android:gravity="center"
        android:text="@string/save_button_text"
        android:textColor="#ffffff"
        android:textSize="17dp" />

</RelativeLayout>